---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    description:
      "Memberikan dasar pemafahan nilai kesenian dan ekonomi kreatif",
    icon: "mdi:handshake",
  },
  {
    
    description:
      "Meningkatkan partisifatif kepada masyarakan umum terkait nilai kesenian dan ekonomi kreatif.",
    icon: "mdi:account-group",
  },
  {
   
    description:
      "Menyediakan kesempatan untuk pertukaran pengetahuan dan keterampilan",
    icon: "mdi:directions-fork",
  },
];
---

<ContentSection title="Tujuan" id="tujuan">
  <Fragment slot="lead">
    Ramadhan Art Fest memiliki beberapa tujuan
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
